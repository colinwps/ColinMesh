{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "Key": "Rk2@e!q8VzM#Lr9wTbY6zKpX1vNc3UdH", // Replace with a strong key
    "Issuer": "OmniMindOS",
    "Audience": "OmniMindOS"
  },
  "ReverseProxy": {
    "Routes": [
      {
        "RouteId": "login-route",
        "Match": { "Path": "/login" },
        "ClusterId": "auth-service",
        "AuthorizationPolicy": "Anonymous"
      },

      {
        "RouteId": "servicea-http",
        "ClusterId": "servicea-http",
        "Match": {
          "Path": "/api/servicea/{**catch-all}"
        }
      },
      {
        "RouteId": "servicea-grpc",
        "ClusterId": "servicea-grpc",
        "Match": {
          "Path": "/grpc/servicea/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/grpc/servicea" }
        ]
      }
    ],
    "Clusters": {
      "servicea-http": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "servicea-grpc": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001"
          }
        },
        "HttpRequest": {
          "Version": "2.0"
        }
      }
    }
  },
  "ConsulConfig": {
    "Address": "http://localhost:8500",
    "ServiceName": "gateway",
    "ServiceId": "gateway-1",
    "ServiceAddress": "localhost",
    "ServicePort": 8801
  }

}
